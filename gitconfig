[user]
  name = Andy Atkinson
  email = andyatkinson@gmail.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color]
  diff = auto
  status = auto
  branch = auto
[apply]
  whitespace = nowarn
[alias]
  co = checkout
  st = status
  ci = commit
  br = branch -a -v
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  today = log --stat --since='1 Day Ago' --graph --pretty=short --abbrev-commit --date=relative
  mine = log -n 5 --author=$(whoami)
  irr = !git co master && git pull --rebase && git co - && git rebase --ignore-date -i origin/master
  irm = !git co main && git pull --rebase && git co - && git rebase --ignore-date -i origin/main
  cp = cherry-pick
  g = grep --break --heading --line-number
  rc = rebase --continue
  rs = rebase --skip
  ur = !git co master && git push andy head -f && git co -
  bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
  new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
  brs = for-each-ref --sort=-committerdate --format='%(refname:short)' refs/heads/
  bds = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:relative) %09 %(refname:short)'
  old = for-each-ref --sort=committerdate --format='%(refname:short)' refs/heads/
  dfw = diff --ignore-space-change
  commend = commit --amend --no-edit
  grog = log --graph --abbrev-commit --decorate --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)'
  originbrs = ls-remote --heads origin  | sed 's?.*refs/heads/??'
[rerere]
  enabled = true
  autoupdate = true
[grep]
  extendRegexp = true
  lineNumber = true
[core]
  excludesfile = ~/.gitignore
	editor = vim
[web]
  browser = open
[help]
  autocorrect = 1
[branch]
  autosetuprebase = always
[url "https://github.com"]
  insteadOf = git://github.com
[url "https://github.com/"]
  insteadOf = git://github.com:
[url "https://"]
  insteadOf = git://
[merge]
  conflictstyle = diff3
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[mergetool "sourcetree"]
  cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[commit]
  verbose = true
