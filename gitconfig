[user]
  name = Andy Atkinson
  email = andyatkinson@gmail.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color]
  diff = auto
  status = auto
  branch = auto
[apply]
  whitespace = nowarn
[alias]
  co = checkout
  st = status
  ci = commit
  br = branch -a -v
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  mine = log -n 5 --author=$(whoami)
  ir = !git co master && git pull --rebase && git co - && git rebase -i origin/master
  cp = cherry-pick
  g = grep --break --heading --line-number
  rc = rebase --continue
  ur = !git co master && git push andy head -f && git co -
[rerere]
  enabled = true
[grep]
  extendRegexp = true
  lineNumber = true
[core]
  excludesfile = ~/.gitignore
[web]
  browser = open
[help]
  autocorrect = 1
